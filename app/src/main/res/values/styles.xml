<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <declare-styleable name="Custom_User_Msg">
        <attr name="msg_year" format="string" />
        <attr name="msg_day" format="string" />
        <attr name="msg_month" format="string" />
        <attr name="msg_date" format="string" />
        <attr name="msg_type" format="string" />
        <attr name="words_msg" format="string" />
        <attr name="icon_msg" format="integer|reference" />
        <attr name="zhuanfa_icon" format="integer|reference" />
        <attr name="comment_icon" format="integer|reference" />
        <attr name="like_icon" format="integer|reference" />
        <attr name="zhuanfa_count" format="string" />
        <attr name="comment_count" format="string" />
        <attr name="like_count" format="string" />
    </declare-styleable>

    <declare-styleable name="Custom_User_Album">
        <attr name="photo_year" format="string" />
        <attr name="photo_month" format="string" />
        <attr name="photo_day" format="string" />
    </declare-styleable>

    <declare-styleable name="Custom_Bar">
        <attr name="name_text" format="string"/>
        <attr name="info_text" format="string"/>
        <attr name="info_drawable" format="integer|reference"/>
        <attr name="right_drawable" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>
