<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.xiaoyu.schoolelive.activities.CheckInActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xiaoyu.schoolelive.custom.CircleImageView
            android:background="@drawable/nav_photo"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:id="@+id/circleImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_menu_share"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:paddingLeft="10dp"
                android:text="我的金币:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myCheckGold"
                android:paddingLeft="5dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/checkInButton"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:text="签到" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="金币任务"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/intoTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="更多 >>"/>
    </LinearLayout>

</LinearLayout>