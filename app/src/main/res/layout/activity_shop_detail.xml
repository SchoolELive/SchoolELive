<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoyu.schoolelive.activities.ShopItemDetailActivity">
    <include
        layout="@layout/include_toolbar"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shop_detail_image"
            android:src="@drawable/nav_photo"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/shop_detail_image"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_menu_share"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/shop_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <Button
            android:id="@+id/shop_detail_change"
            android:layout_below="@id/ll"
            android:text="兑换"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:text="商品名称:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shop_detail_name"
            android:textSize="14dp"
            android:maxLength="16"
            android:text="asdasd"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="商品介绍:"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdas\nasdasd\nasdasd\n"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
