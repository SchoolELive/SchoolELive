<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/goods_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:background="@drawable/icon_top28"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="顶"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goods_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:background="@drawable/icon_hot28"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="热"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goods_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:background="@drawable/icon_new28"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="新"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1597"
                android:textStyle="bold"
                android:id="@+id/goods_attention_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 人围观"
                android:layout_marginRight="@dimen/ui_10_dip"/>

            <ImageView
                android:id="@+id/goods_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_overflowdots"/>

    </LinearLayout>

</LinearLayout>