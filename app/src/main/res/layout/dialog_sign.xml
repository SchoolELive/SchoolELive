<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_sign_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67px"
        android:text="@string/sign_succeed_today"
        android:textSize="44px" />

    <TextView
        android:id="@+id/dialog_sign_tv_score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39px"
        android:textColor="#FF1B89CD" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialog_sign_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="67px"
        android:layout_marginLeft="73px"
        android:layout_marginRight="73px"
        android:layout_marginTop="61px"
        android:padding="0dp"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="48px" />
</LinearLayout>
