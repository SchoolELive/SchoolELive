<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goods_name"
        android:textSize="@dimen/bar_text_size"
        android:text="水桶"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/ui_10_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:id="@+id/goods_pri_type"
            android:text="可议价"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ¥ "/>
        <TextView
            android:id="@+id/yj_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/bar_text_size"/>
    </LinearLayout>
    <include layout="@layout/include_goods_intro" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ui_10_dip"
        >

        <Button
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="就是Ta了"
            android:background="@color/light"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/btn_yj_mai"
            android:textSize="@dimen/bar_text_size"
            />
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/btn_yj_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="砍价"
            android:background="@color/light"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/bar_text_size"/>
    </LinearLayout>
</LinearLayout>