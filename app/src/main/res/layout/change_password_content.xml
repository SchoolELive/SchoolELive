<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="密码:"
            android:padding="3dp"
            android:id="@+id/old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:labelFor="@id/old_password"
            android:layout_width="250dp"
            android:typeface="monospace"
            android:background="@null"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:password="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/new_password"
            android:padding="3dp"
            android:text="新密码:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:labelFor="@id/new_password"
            android:layout_width="250dp"
            android:typeface="monospace"
            android:background="@null"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:password="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/re_new_password"
            android:padding="3dp"
            android:text="确认新密码:"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <EditText
            android:labelFor="@id/re_new_password"
            android:layout_width="250dp"
            android:typeface="monospace"
            android:background="@null"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:password="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/changepass_true_button"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"/>
        <Button
            android:id="@+id/changepass_false_button"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>