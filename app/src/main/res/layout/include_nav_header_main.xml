<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:src="@drawable/nav_photo" />
    <TextView
        android:id="@+id/dongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态: "
        android:textColor="#99F"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/dongtai_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff99"
        android:textSize="12sp"
        android:text="962"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dongtai"
        android:layout_marginStart="18dp" />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/simple_blue"
        android:textSize="20sp"
        android:text="紫炎"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/email" />
    <TextView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝: "
        android:textColor="#99F"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/fans_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1375"
        android:textColor="#ff99"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/username"
        android:layout_marginStart="11dp" />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99f"
        android:text="1162142881@qq.com"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/fans" />

</RelativeLayout>
