<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xiaoyu.com.schoolelive">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.xiaoyu.schoolelive.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xiaoyu.schoolelive.activities.SystemSettingActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.HistoryCollectActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.UserCenterActivity" />
        <activity android:name="com.xiaoyu.schoolelive.base.BaseSlideBack" />
        <activity android:name="com.xiaoyu.schoolelive.activities.UserInfoActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.MySpinnerActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.UserReportActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.AlbumImageDetailActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.UserAlbumActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.FindActivity" />

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_SETTINGS" />
        <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

        <uses-feature
            android:name="android.hardware.camera2"
            android:required="true" />

        <activity android:name="com.xiaoyu.schoolelive.activities.UserFocusActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.SysSetAccountActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.SysSetInformActivity" />
        <activity android:name="com.xiaoyu.schoolelive.activities.SysSetShareActivity"></activity>
    </application>

</manifest>